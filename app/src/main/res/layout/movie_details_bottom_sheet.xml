<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/movie_details_bottom_sheet"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/bottom_sheet_behavior"
    app:behavior_peekHeight="800dp"
    app:behavior_hideable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bottom_sheet_background">

    <androidx.cardview.widget.CardView
        android:id="@+id/poster_card_view"
        android:layout_width="120dp"
        android:layout_height="180dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:cardCornerRadius="18dp">
        <ImageView
            android:id="@+id/poster_image_view"
            style="@style/MoviePosterStyle"
            android:scaleType="centerCrop"
            android:src="@drawable/texet"
            android:contentDescription="@string/movie_title"/>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/descriptions"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"

        app:layout_constraintStart_toEndOf="@id/poster_card_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/poster_card_view"
        app:layout_constraintBottom_toBottomOf="@id/poster_card_view"
        android:layout_marginHorizontal="20dp">

        <TextView
            android:id="@+id/movie_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Movie : Title"
            android:textSize="15sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/movie_rate"
            style="@style/BottomSheetItemDescription"
            android:text="@string/rating"/>
        <TextView
            android:id="@+id/actors"
            style="@style/BottomSheetItemDescription"
            android:maxLines="2"
            android:text="@string/actors"/>
        <TextView
            android:id="@+id/directors"
            style="@style/BottomSheetItemDescription"
            android:maxLines="1"
            android:text="@string/directors"/>
        <TextView
            android:id="@+id/movie_description"
            style="@style/BottomSheetItemDescription"
            android:maxLines="5"
            android:text="@tools:sample/lorem/random"
            android:ellipsize="end"/>
    </LinearLayout>

    <TextView
        android:id="@+id/rate_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="RATE THIS MOVIE"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/descriptions"/>

    <HorizontalScrollView
        android:id="@+id/rate_view_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/rate_text_view">

        <com.lefarmico.moviesfinder.customViews.RateView
            android:id="@+id/rate_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:button_size="24dp"
            app:button_space="6dp"
            app:buttons_count="10"
            app:default_color="@color/button_outline_2"
            app:pushed_color="@color/color_of_active_element"
            app:is_buttons_horizontal="true"
            app:number_size="16sp"
            />
    </HorizontalScrollView>

    <TextView
        android:id="@+id/genre_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="GENRE"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/rate_view_scroll"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/genre_text_view"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"/>
</androidx.constraintlayout.widget.ConstraintLayout>