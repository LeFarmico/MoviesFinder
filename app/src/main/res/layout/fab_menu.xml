<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_movies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="70dp"
        android:src="@drawable/ic_baseline_movie_24"
        android:clickable="true"
        android:focusable="true"
        android:alpha="0"
        android:backgroundTint="@color/main_color_dark"
        app:fabSize="mini"
        android:contentDescription="@string/default_text_button" />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_series"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="70dp"
        android:src="@drawable/ic_baseline_camera_24"
        android:clickable="true"
        android:focusable="true"
        android:alpha="0"
        android:backgroundTint="@color/main_color_dark"
        app:fabSize="mini"
        android:contentDescription="@string/default_text_button"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_favorites"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="70dp"
        android:src="@drawable/ic_baseline_videocam_24"
        android:clickable="true"
        android:focusable="true"
        android:alpha="0"
        android:backgroundTint="@color/main_color_dark"
        app:fabSize="mini"
        android:contentDescription="@string/default_text_button"/>


</FrameLayout>