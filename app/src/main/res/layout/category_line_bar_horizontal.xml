<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:parentTag="android.widget.LinearLayout"
    android:orientation="vertical">


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/category_name"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:textAlignment="textStart"
        android:text="@string/movie_container_name"
        style="@style/ActiveButton"/>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <GridLayout
            android:id="@+id/movie_buttons_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layoutAnimation="@anim/starting_posters_animation_layout"
            android:rowCount="3"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/movie_1_1"
                android:src="@drawable/texet"
                style="@style/MoviePosterButtonStyle" />
            <ImageButton
                android:id="@+id/movie_1_2"
                android:src="@drawable/texet"
                style="@style/MoviePosterButtonStyle"/>
            <ImageButton
                android:id="@+id/movie_1_3"
                android:src="@drawable/texet"
                style="@style/MoviePosterButtonStyle"/>
            <ImageButton
                android:id="@+id/movie_1_4"
                android:src="@drawable/texet"
                style="@style/MoviePosterButtonStyle"/>
        </GridLayout>
    </HorizontalScrollView>
</merge>