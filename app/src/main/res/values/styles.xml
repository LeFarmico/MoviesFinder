<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BackgroundColor" parent="DarkYellowTheme">
        <item name="android:background">@color/main_color</item>
    </style>

    <style name="ToolBarStyle" parent="DarkYellowTheme">
        <item name="android:background">@color/main_color</item>
        <item name="titleTextColor">@color/on_background_color</item>
    </style>

    <style name="BottomNavigatorStyle">
        <item name="android:background">@color/bottom_bar_color</item>
        <item name="itemIconTint">@drawable/bottom_navigation_selector</item>
        <item name="itemTextColor">@drawable/bottom_navigation_selector</item>
    </style>

    <style name="TextStyle">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:typeface">sans</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="TextStyle.Body">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
        <item name="android:typeface">sans</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="TextStyle.Subtitle">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextStyle.Subtitle.Contrast">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextStyle.Warning">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextStyle.Description">
        <item name="android:maxLines">5</item>
        <item name="android:ellipsize">end</item>
        <item name="android:text">@tools:sample/lorem/random</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextStyle.PrimaryHeading">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextStyle.SecondaryHeading">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="Divider.Vertical">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="Neuromorphism">
        <item name="neumorph_shadowColorLight">@color/menu_light_shadow</item>
        <item name="neumorph_shadowColorDark">@color/menu_dark_shadow</item>
    </style>

    <style name="Neuromorphism.MovieItem">
        <item name="neumorph_shadowColorLight">@color/menu_light_shadow</item>
        <item name="neumorph_shadowColorDark">@color/menu_dark_shadow</item>
        <item name="neumorph_cornerFamily">rounded</item>
        <item name="neumorph_cornerSize">12dp</item>
    </style>
</resources>