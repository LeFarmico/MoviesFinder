<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PassiveButton">
        <item name="android:background">@drawable/bottom_button_ripple</item>
        <item name="android:textColor">@color/color_of_active_element</item>
    </style>

    <style name="ActiveButton">
        <item name="android:textColor">@color/light_primary_color</item>
        <item name="android:background">@color/color_of_passive_element</item>
    </style>

    <style name="BackgroundColor" parent="DarkYellowTheme">
        <item name="android:background">@color/light_primary_color</item>
    </style>

    <style name="ToolBarStyle" parent="DarkYellowTheme">
        <item name="android:background">@color/light_primary_color</item>
        <item name="titleTextColor">@color/color_of_passive_element</item>
    </style>

    <style name="MoviePosterStyle" >
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">180dp</item>
        <item name="android:stateListAnimator">@animator/poster_elevation</item>
        <item name="android:background">@drawable/poster_shape</item>
    </style>

    <style name="BottomNavigatorStyle">
        <item name="android:background">@color/color_of_passive_element</item>
        <item name="itemIconTint">@drawable/bottom_navigation_selector_light</item>
        <item name="itemTextColor">@drawable/bottom_navigation_selector_light</item>
    </style>

    <style name="TextStyle">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="TextStyle.Warning">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextStyle.Description">
        <item name="android:maxLines">5</item>
        <item name="android:ellipsize">end</item>
        <item name="android:text">@tools:sample/lorem/random</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="TextStyle.PrimaryHeading">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextStyle.SecondaryHeading">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>
</resources>